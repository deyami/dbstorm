<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>jdbc</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>${project.artifactId}-${project.version}-jdbc</baseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>dependencies</outputDirectory>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<includes>
				<include>*:jar:*</include>
			</includes>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>src</directory>
			<outputDirectory>src</outputDirectory>
			<filtered>false</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/config</directory>
			<outputDirectory>conf</outputDirectory>
			<filtered>true</filtered>
		</fileSet><!-- 过滤配置文件 -->
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
			<filtered>false</filtered>
		</fileSet>
		<fileSet>
			<directory>target/assemble/source</directory>
			<outputDirectory>lib</outputDirectory>
			<filtered>false</filtered>
		</fileSet>
		<fileSet>
			<directory>target/assemble/javadoc</directory>
			<outputDirectory>lib</outputDirectory>
			<filtered>false</filtered>
		</fileSet>
		<fileSet>
			<directory>target/assemble/jar</directory>
			<outputDirectory>lib</outputDirectory>
			<filtered>false</filtered>
		</fileSet>
		<fileSet>
			<directory>target/assemble/apidocs</directory>
			<outputDirectory>apidocs</outputDirectory>
			<filtered>false</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.txt</include>
				<include>pom.xml</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>